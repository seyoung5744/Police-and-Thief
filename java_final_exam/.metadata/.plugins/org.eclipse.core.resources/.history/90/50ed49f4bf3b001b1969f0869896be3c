package final_exam;

import java.awt.BorderLayout;
import java.awt.Color;
import java.awt.Container;
import java.util.List;

import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;

import java.awt.event.*;

public class Game extends JFrame {
	private JPanel background;
	private Map map;
	private Human h;
	private List<JPanel> panelList; // Ä­ ¸®½ºÆ®
	private JPanel thief; // µµµÏ
	private Room[][] map1; // µµµÏ, °æÂû µ¿ÀÛ À¯¹«

	private int thiefX, thiefY;

	public Game() {
		setTitle("8*8 Color Frame");
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);

		Container c = getContentPane();
//		background = new JPanel();
////		background.setLayout(null);
//		background.setBounds(0, 0, 700, 700);
//		background.setBackground(Color.YELLOW);

		map = new Map();
		h = new Human();
		h.setColor(new Color(255,0,0));
		panelList = map.getPanelList();
		thiefX = 1;
		thiefY = 2;

		thief = (JPanel) panelList.get(thiefX * 9 + thiefY).add(h);
		// thiefLocation = 9; // ·»´ý °ªÀ¸·Î ÇÒ²¨ÀÓ

		map1 = map.getLevel1();

		map.addKeyListener(new KeyAdapter() {
			@Override
			public void keyPressed(KeyEvent e) {
				int x;
				if (e.getKeyCode() == KeyEvent.VK_LEFT) {
					if (map1[thiefX][thiefY].getLeft() == 0) {
						System.out.println("¿ÞÂÊ");
						System.out.println(thief.getLocation());
						panelList.get(thiefX * 9 + thiefY).remove(h);

						panelList.get(thiefX * 9 + thiefY).repaint();

						thiefY -= 1;
						panelList.get(thiefX * 9 + thiefY).add(h);
					}
				} else if (e.getKeyCode() == KeyEvent.VK_RIGHT) {
					if (map1[thiefX][thiefY].getRight() == 0) {
						System.out.println("¿À¸¥ÂÊ");
						panelList.get(thiefX * 9 + thiefY).remove(h);

						panelList.get(thiefX * 9 + thiefY).repaint();

						thiefY += 1;
						panelList.get(thiefX * 9 + thiefY).add(h);
					}
				} else if(e.getKeyCode() == KeyEvent.VK_UP) {
					if (map1[thiefX][thiefY].getUp() == 0) {
						System.out.println("À§");
						panelList.get(thiefX * 9 + thiefY).remove(h);

						panelList.get(thiefX * 9 + thiefY).repaint();

						thiefX -= 1;
						panelList.get(thiefX * 9 + thiefY).add(h);
					}
				} else if(e.getKeyCode() == KeyEvent.VK_DOWN) {
					if (map1[thiefX][thiefY].getDown() == 0) {
						System.out.println("¾Æ·¡");
						panelList.get(thiefX * 9 + thiefY).remove(h);

						panelList.get(thiefX * 9 + thiefY).repaint();

						thiefX += 1;
						panelList.get(thiefX * 9 + thiefY).add(h);
					}
				} 
			}
		});

//		background.add(map);
//		this.add(background);
		c.add(map, BorderLayout.CENTER);
		setSize(700, 700);
		setResizable(false); // Ã¢ Å©±â º¯È¯X
		setVisible(true);
		map.setFocusable(true);
	}

	public static void main(String[] args) {
		new Game();
	}
}
