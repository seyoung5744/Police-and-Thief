package final_exam;

import java.awt.BorderLayout;
import java.awt.Color;
import java.awt.Container;
import java.util.List;

import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;

import java.awt.event.*;

public class Game extends JFrame{
	private JPanel background;
	private Map map;
	private Human h;
	private List<JPanel> panelList;
	private JPanel police;
	public Game(){
		setTitle("8*8 Color Frame");
		setVisible(true);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		Container c = getContentPane();
//		background = new JPanel();
////		background.setLayout(null);
//		background.setBounds(0, 0, 700, 700);
//		background.setBackground(Color.YELLOW);
		
		
		
		map = new Map();	
		h = new Human();
		panelList = map.getPanelList();

		police = (JPanel) panelList.get(9).add(h);
		
		map.addKeyListener(new KeyAdapter() {
			@Override
			public void keyPressed(KeyEvent e) {
				int x;
				if (e.getKeyCode() == KeyEvent.VK_LEFT) {
				
					System.out.println(police.getLocation());
//					attack.setLocation(x, attack.getY());

//					attack.repaint();
				} else if (e.getKeyCode() == KeyEvent.VK_RIGHT) {
				
					System.out.println(police.getLocation());
//					attack.setLocation(x, attack.getY());
//					attack.repaint();
				} 
			}
		});
		
//		background.add(map);
//		this.add(background);
		c.add(map, BorderLayout.CENTER);
		setSize(700, 700);
		setResizable(false);
	}
	
	public static void main(String[] args) {
		new Game();
	}
}
