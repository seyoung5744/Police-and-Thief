package final_exam;

import java.awt.*;

import javax.swing.*;
import javax.swing.border.LineBorder;
import javax.swing.border.MatteBorder;

public class Map extends JFrame {
	private JPanel lab;
	private JPanel lab1;
	private Room[][] map1 = new Room[8][8];
	
	Map() {
		setTitle("8*8 Color Frame");
		setVisible(true);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);

		Container c = getContentPane();
		lab1 = new JPanel();

		lab1.setLayout(new GridLayout(8, 8));
		for (int i = 0; i < 8; i++) {
			for (int j = 0; j < 8; j++) {
				

				lab = new JPanel();
				lab.setBackground(Color.white);
				lab.setBorder(new MatteBorder(map1[i][j].getUp(), map1[i][j].getDown(), map1[i][j].getLeft(), map1[i][j].getRight(),  Color.black));

				lab.setOpaque(true);
				lab1.add(lab);
			}
		}
		lab1.setBorder(BorderFactory.createEmptyBorder(10, 10, 10, 10));
		c.add(lab1, BorderLayout.CENTER);

		setSize(700, 700);
	}

	public void createMap() {
		map1[0][0].setRoom(0, 0, 0, 0);
