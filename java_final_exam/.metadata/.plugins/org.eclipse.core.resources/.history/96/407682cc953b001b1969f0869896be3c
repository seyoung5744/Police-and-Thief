package final_exam;

import java.awt.*;

import javax.swing.*;
import javax.swing.border.LineBorder;

public class MyPanel extends JFrame {
	JPanel lab;
	MyPanel() {
		setTitle("4*4 Color Frame");
		setVisible(true);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);

		Container c = getContentPane();
		c.setLayout(new GridLayout(8, 8));
		for (int i = 0; i < 64; i++) {
			lab = new JPanel();
			lab.setBackground(Color.gray);
			lab.setBorder(new LineBorder(Color.black));
			lab.setBorder(BorderFactory.createEmptyBorder(10 , 10 , 10 , 10)); //»óÇÏÁÂ¿ì 10¾¿ ¶ç¿ì±â

			lab.setOpaque(true);
			c.add(lab, BorderLayout.CENTER);
		}
//		c.add(BorderLayout.CENTER);
		setSize(700, 700);
	}

	public static void main(String[] args) {
		new MyPanel();
		System.out.println("test");
	}

}